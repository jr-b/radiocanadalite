---
permalink: /rss/justice.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="{{ meta.url }}" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ meta.siteName }} - Justice</title>
    <link>{{ meta.url }}/justice</link>
    <atom:link href="{{ meta.url }}{{ permalink }}" rel="self" type="application/rss+xml" />
    <description><![CDATA[ {{ meta.siteDescription }} - Mise Ã  jour toutes les 30 minutes. ]]></description>
    <language>{{ meta.language }}</language>
    <lastBuildDate>{{ buildtime.timestamp }}</lastBuildDate>
    {% for post in justice %}
    {% if (post.body.html) or (post.navigations) %}
    <item>
      <title>{{ post.title }}</title>
      <link>{{ meta.url }}/justice/articles/{{ post.id }}/</link>
      <description><![CDATA[{{ post.summary }}]]></description>
      <pubDate>{{ post.publishedLastTimeAt }}</pubDate>
      <dc:creator>{% if post.signaturesV2[0].person.name %}{{ post.signaturesV2[0].person.name }}{% else %}Radio-Canada{% endif %}</dc:creator>
      <guid isPermaLink="true">{{ meta.url }}/justice/articles/{{ post.id }}/</guid>
      <enclosure type="image/jpeg" length="0" url="{{ post.shareableSummaryMultimediaContent.concreteImages[1].mediaLink.href }}"/>
    </item>
    {% endif %}
    {%- endfor %}
  </channel>
</rss>